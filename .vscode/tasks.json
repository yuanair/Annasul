{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "doc",
			"args": [
				"--no-deps"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "cargo doc"
		},
		{
			"type": "cargo",
			"command": "doc",
			"args": [
				"--no-deps",
				"--open"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "cargo doc --open"
		},
		{
			"type": "cargo",
			"group": "build",
			"command": "build",
			"env": {
				"RUST_LOG": "info"
			},
			"args": [
				"--bin",
				"example"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "example: build debug"
		},
		{
			"type": "cargo",
			"group": "build",
			"command": "build",
			"env": {
				"RUST_LOG": "info"
			},
			"args": [
				"--release",
				"--bin",
				"example"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "example: build release"
		},
		{
			"type": "cargo",
			"group": "test",
			"command": "test",
			"args": [
				"--",
				"--nocapture"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "cargo test"
		},
	]
}